<Window x:Class="NomadBooksLite.Update_Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update_Password" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock TextAlignment="Center" FontSize="16" TextWrapping="Wrap" Margin="15">This is your first time logging in. Please update your password."</TextBlock>
            
            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Label Content="New Password            " Margin="5,0,0,0"/>
                <PasswordBox Name="passwordTextBox1" Width="140" Margin="5,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                <Label Content="Repeat New Password" Margin="5,0,0,0"/>
                <PasswordBox Name="passwordTextBox2" Width="140" Margin="5,0,0,0"/>
            </StackPanel>          
        </StackPanel>
        <Button Content="Submit" Click="Password_Submit" VerticalAlignment="Bottom" Margin="0,0,0,25" Width="100" />
    </Grid>
</Window>
