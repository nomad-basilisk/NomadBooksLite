<Window x:Class="NomadBooksLite.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        
        <Label Content="Nomad Books" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="15" FontSize="24" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical" Margin="66,74,66,75">
            <Label Content="Username"/>
            <TextBox Name="username_textbox" Width="150" Height="20" Margin="5,0,5,5"/>

            <Label Content="Password"/>
            <PasswordBox Name="password_textbox" Width="150" Height="20" Margin="5,0,5,5"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Click="Login_Click" Content="Login" Width="70" Margin="5"/>
                <Button Click="Register_Click" Content="Register" Width="70" Margin="5" IsEnabled="True"/>
            </StackPanel>
            <Button Content="Forgot Password?" Width="150" Height="Auto" Margin="5" IsEnabled="False"/>
            
            
        </StackPanel>
        
        <Label Name="StatusLabel" Content="Status..." Grid.Row="6"  VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" Margin="0,5,0,0"/>
    </Grid>
</Window>
